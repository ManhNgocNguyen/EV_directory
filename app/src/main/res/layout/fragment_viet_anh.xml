<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VietAnhFragment"
    android:id="@+id/vietAnhLayout"
    android:orientation="vertical">
    <TextView
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Từ điển Việt Anh"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editTextTuTiengViet"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:hint="Từ tiếng việt"
        android:background="@drawable/custom"/>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/custom"
        android:hint="Từ tiếng anh"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center|left"
        android:textSize="18sp"
        android:id="@+id/textViewTuTiengAnh"/>
    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dịch"
        android:layout_gravity="center"
        android:id="@+id/buttonDich"/>

</LinearLayout>
