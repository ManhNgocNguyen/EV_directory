<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnhVietFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#005598">

        <EditText
            android:id="@+id/editTextAnhViet"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:background="@drawable/custom"
            android:hint="Tra từ điển Anh Viêt" />
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/textViewTinhTu"
            android:text="tính từ"
            android:background="@drawable/custom"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/textViewDanhTu"
            android:text="danh từ"
            android:background="@drawable/custom"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"/>
        <TextView
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/textViewTrangTu"
            android:text="trạng từ"
            android:background="@drawable/custom"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayoutAnhViet1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/textViewEnglish"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kind"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/textViewKind"/>
</LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearLayoutAnhViet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:src="@drawable/sign_icon"
                android:layout_gravity="center|left"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="VietNam"
                android:textColor="#E82EB9"
                android:textStyle="bold"
                android:id="@+id/textViewVietNam"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/buttonTra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:backgroundTint="@color/black"
            android:hint="Tra"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>