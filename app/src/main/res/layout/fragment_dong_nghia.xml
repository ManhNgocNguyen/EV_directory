<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DongNghiaFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:backgroundTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="SAME MEANING"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@drawable/custom_title"/>
        <EditText
            android:id="@+id/editTextTuCanTimDongNghia"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nhập từ cần tìm"
            android:background="@drawable/custom"/>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tra"
            android:id="@+id/buttonTraDongNghia"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewDongNghia"/>
    </LinearLayout>


</LinearLayout>